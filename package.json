{
  "name": "bigred-link",
  "version": "1.7.0",
  "description": "A big red URL shortener",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 22.x",
    "npm": ">= 10.x"
  },
  "scripts": {
    "back-up-db": "node ./src/utils/back-up-db.js",
    "build": "vite build",
    "check-all-urls": "node ./src/utils/safe-browsing-url-check.js",
    "clean": "rm -rf ./build",
    "dev": "vite serve --port $PORT",
    "prebuild": "npm run clean",
    "preview": "vite preview",
    "start": "vercel dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "https://bigred.link",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/mikesprague/bigred-link"
  },
  "bugs": {
    "url": "https://github.com/mikesprague/bigred-link/issues"
  },
  "dependencies": {
    "@bugsnag/core": "8.4.0",
    "@bugsnag/js": "8.4.0",
    "@bugsnag/plugin-react": "8.4.0",
    "@fortawesome/fontawesome-svg-core": "6.7.2",
    "@fortawesome/free-brands-svg-icons": "6.7.2",
    "@fortawesome/free-regular-svg-icons": "6.7.2",
    "@fortawesome/free-solid-svg-icons": "6.7.2",
    "@fortawesome/react-fontawesome": "0.2.2",
    "@supabase/supabase-js": "2.50.3",
    "clipboard-polyfill": "4.1.1",
    "dayjs": "1.11.13",
    "dompurify": "3.2.6",
    "dotenv": "17.0.1",
    "jotai": "2.12.5",
    "nanoid": "5.1.5",
    "prop-types": "15.8.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.16",
    "@tailwindcss/vite": "4.1.11",
    "@vitejs/plugin-react-swc": "3.10.2",
    "cz-git": "^1.11.2",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.13",
    "stylelint": "16.21.1",
    "stylelint-config-standard": "38.0.0",
    "tailwindcss": "4.1.11",
    "vercel": "^44.2.12",
    "vite": "7.0.2",
    "vite-plugin-html": "3.2.2",
    "vite-plugin-pwa": "1.0.1"
  },
  "peerDependencies": {
    "esbuild": "0.25.5",
    "undici": "5.29.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "volta": {
    "node": "24.3.0",
    "npm": "11.4.2"
  }
}
